{
    "app-id" : "org.codenomad.stitches",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "stitches",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
	"--device=dri",
        "--filesystem=home",
        "--socket=pulseaudio"
