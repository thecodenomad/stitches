    "modules" : [
    	"python-deps.json",
        {
            "name" : "stitches",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///var/home/codenomad/Development"
                }
            ]
        }
